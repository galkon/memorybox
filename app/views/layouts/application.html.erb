  <head>
    <title>MemoryBox.</title>
  	<meta charset="utf-8" />
  	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <%= render "layouts/meta" %>
  	<%= stylesheet_link_tag    "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="container">
      <header>
        <%= render "layouts/top_nav" %>
      </header>
      <div class="body row">
        <div class="small-12 large-6 large-centered small-centered columns">
          <% if flash[:alert] %>
            <div data-alert="" class="alert-box alert">
              <%= flash[:alert] %>
              <a href="" class="close">&times;</a>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
      <%= render "layouts/footer" %>
    </div>
    <%= render "layouts/ga" if Rails.env.production? %>
    <%= javascript_include_tag "application" %>
    <script>
      (function(){var uv=document.createElement('script');uv.type='text/javascript';uv.async=true;uv.src='//widget.uservoice.com/QLm1bxw51RvRF9ZF1ppq9w.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(uv,s)})()
    </script>
  </body>
  <%= javascript_include_tag "vendor/custom.modernizr" %>
  <%= javascript_include_tag "home" %>
</html>
